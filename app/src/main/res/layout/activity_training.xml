<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainingActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar_training"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_training"
        app:layout_constraintBottom_toTopOf="@id/text_training_sub"
        app:layout_constraintVertical_weight="2"
        android:id="@+id/text_training_main"
        android:textSize="50sp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/text_training_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1"
        android:id="@+id/text_training_sub"
        android:textSize="40sp"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>